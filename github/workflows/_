# .github/workflows/deploy-prod.yml
on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Build and push Docker images
        run: |
          docker build -t ghcr.io/your-org/frontend:prod ./frontend
          docker build -t ghcr.io/your-org/backend:prod ./backend
          docker push ghcr.io/your-org/frontend:prod
          docker push ghcr.io/your-org/backend:prod

      - name: SSH into VPS and update services
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ansible
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          port: 18453
          script: |
            docker-compose -f docker-compose.prod.yml pull
            docker-compose -f docker-compose.prod.yml up -d
